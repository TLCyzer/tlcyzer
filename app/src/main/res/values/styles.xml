    <style name="Widget.TLCEval.SmallRoundButton" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/round_button_small</item>
        <item name="android:layout_height">@dimen/round_button_small</item>
        <item name="android:background">@drawable/ic_outer_circle_thin</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:elevation">@dimen/z_fab</item>
        <item name="android:padding">@dimen/spacing_micro</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">?iconOnPrimaryDark</item>
    </style>

    <style name="Widget.TLCEval.MediumRoundButton" parent="@style/Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/round_button_medium</item>
        <item name="android:layout_height">@dimen/round_button_medium</item>
        <item name="android:background">@drawable/ic_outer_circle</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:elevation">@dimen/z_fab</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:tint">?iconOnPrimaryDark</item>
    </style>

