<resources>

    <!-- Base application theme. -->
    <style name="TLCEvalBase" parent="@style/Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/waterfall</item>
        <item name="colorPrimaryDark">@color/thundercloud</item>
        <item name="colorAccent">@color/moss</item>
        <item name="colorAccentDark">@color/meadow</item>

        <item name="textOnPrimary">@color/textOnWaterfall</item>
        <item name="textOnPrimaryDark">@color/textOnThundercloud</item>
        <item name="textOnAccent">@color/textOnMoss</item>
        <item name="textOnAccentDark">@color/textOnMeadow</item>

        <item name="iconOnPrimary">@color/iconOnWaterfall</item>
        <item name="iconOnPrimaryDark">@color/iconOnThundercloud</item>
        <item name="iconOnAccent">@color/iconOnMoss</item>
        <item name="iconOnAccentDark">@color/iconOnMeadow</item>

        <item name="colorControlHighlight">?colorAccent</item>

        <item name="toolbarStyle">@style/Widget.TLCEval.Toolbar</item>
        <item name="android:toolbarStyle">@style/Widget.TLCEval.Toolbar</item>
    </style>

    <style name="TLCEval" parent="TLCEvalBase">
        <item name="android:navigationBarColor">
            @color/immersive_bars
        </item>
        <item name="android:statusBarColor">@color/immersive_bars</item>

    </style>

    <style name="Widget.TLCEval" parent="android:Widget" />

    <style name="Widget.TLCEval.Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/immersive_bars</item>
        <item name="android:elevation">0dp</item>
        <item name="titleTextColor">@color/waterfall</item>
<!--        <item name="titleTextAppearance">@style/TextAppearance.ToolbarTitleSmallCaps</item>-->
    </style>

